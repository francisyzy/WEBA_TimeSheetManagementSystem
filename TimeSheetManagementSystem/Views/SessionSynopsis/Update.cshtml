<div class="container">
    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">Update Session Synopsis Record</div>
            </div>
            <div class="panel-body">
                <form id="dataForm" role="form" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-3" for="sessionSynopsisNameInput">Session Synopsis Name</label>
                        <div class="col-md-4">
                            <input type="text" id="sessionSynopsisNameInput" name="sessionSynopsisNameInput" class="form-control input-group-sm"
                                   maxlength="30" placeholder="Session Synopsis Name" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="sessionSypnosisIsVisible">Visibility</label>
                        <div class="col-md-4">
                            <input type="checkbox" id="sessionSypnosisIsVisible" class="form-control input-group-sm" name="isVisible"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <div class="pull-right">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                                <input type="button" class="btn btn-primary" value="Save" id="saveButton" />
                                <a class="btn btn-default" asp-action="Index" asp-controler="SessionSynopsis">Cancel</a>
                            </div>
                        </div>
                    </div>
                    
                </form>
                <!-- Modal -->
                <div id="deleteModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Delete Session Synopsis</h4>
                            </div>
                            <div class="modal-body">
                                <p>Deleting session synopsis can affect consistency in timesheet generated by instructors this month. Continue the delete action?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal" value="Delete" id="deleteButton">Delete</button>
                            </div>
                        </div>

                    </div>
                </div><!--End of modal-->
            </div><!-- end of div element which has the class="panel-body" -->
        </div><!-- end of the div element which has the class="panel" -->
    </div><!-- end of the div element which has class="col-md-offset-2 col-md-8" -->
</div><!-- end of div element which has the class="container" -->



<script>
    $("[name='isVisible']").bootstrapSwitch();
    $("#dataForm").validate({
        rules: {
            sessionSynopsisNameInput: {
                required: true
            }
        }
    });
    //Declare a document scope variable, window.sessionSynopsisId.
    //A document scope variable value can be accessed anywhere in the web page during the
    //entire life cycle at the web browser (till the user refresh the page)
    //Naming convention: when you create a variable starting with window.
    //the JavaScript engine knows that this is a global variable because it belongs to the window object.
    //This variable will contain the GUID string user id value
    //which will be extracted from the address bar.
    //The variable will be used in the first Ajax() call, to retrieve JSON structured
    //information about the user
    sessionSynopsisId = getSessionSynopsisIdFromAddressBar();

    function getSessionSynopsisIdFromAddressBar() {
        //Get userid from the url string in the browser's address bar
        var urlArray = window.location.href.split('/');
        var sessionSynopsisId = urlArray[urlArray.length - 1];
        return sessionSynopsisId;
    };

    //Note: jQuery.ajax(..) is also often written is $.ajax(..)

    getSessionSynopsisDetails();

    function getSessionSynopsisDetails() {
        $loadHandler = jQuery.ajax({
            type: 'GET',
            url: '/API/SessionSynopsis/' + sessionSynopsisId,
        })
        $loadHandler.done(function (data, textStatus, jqXHR) {
            //The (data) input parameter automatically captures the response from the
            //Get API method
            //I usually use the following code
            //to inspect the returned result captured by the data input parameter
            //from the web server.
            console.log(data);

            //After inspecting the data object with the console.log
            //I have clear picture of the structure and used
            //the following variable to reference(represent) the data variable.
            var sessionSynopsis = data;
            //Copy out the user information
            sessionSynopsisName = sessionSynopsis.sessionSynopsisName;
            visible = sessionSynopsis.visible;
            //console.log("visible" + visible);

            //Populate the respective input controls with the user details.
            //For example, find the text input control, fullNameInput and set the text input control
            //'s value with the fullName variable's content.
            $('#sessionSynopsisNameInput').val(sessionSynopsisName);
            $('#sessionSypnosisIsVisible').prop("checked", visible); //https://stackoverflow.com/questions/8206565/check-uncheck-checkbox-with-javascript#8206573
            //if (visible) { //long method
            //    $('#sessionSypnosisIsVisible').prop("checked", true);
            //    //console.log("visible"); //debug
            //}
            //$('#sessionSypnosisIsVisible').val(visible); //this method doenst work
        }//end of JavaScript anonymous function

        )//end of the done() method;
    }//end of getUserDetails();
    function WebFormData(inSessionSynopsisName, inIsVisible, inUpdatedById) {
        this.SessionSynopsisName = inSessionSynopsisName;
        this.IsVisible = inIsVisible;
        this.UpdatedById = inUpdatedById;
    }
    $('#saveButton').on('click', function () {
        var collectedSessionSynopsisName = $('#sessionSynopsisNameInput').val().trim();
        var collectedIsVisible = $('#sessionSypnosisIsVisible').prop('checked'); //https://stackoverflow.com/questions/4813219/testing-if-a-checkbox-is-checked-with-jquery
        var collectedUpdatedById = @this.User.Identity.Name;

        if ($("#dataForm").valid() == false) {
            console.log("invaild");
        } else if (collectedSessionSynopsisName.length == 0) { //https://stackoverflow.com/questions/23668065/how-to-do-simple-client-side-form-validation-using-javascript-jquery#23668074
            alert("Please input a session synopsis name");
        } else if (jQuery.trim(collectedSessionSynopsisName).length == 0) {
            alert("Please input a session synopsis name");
        } else if (collectedSessionSynopsisName.match(/[^A-Za-z0-9 &]/g)) {
            alert("illegal character detected, please remove symbols");
        } else {
            var webFormData = new WebFormData(collectedSessionSynopsisName, collectedIsVisible, collectedUpdatedById);
            var webFormDataInString = JSON.stringify(webFormData);
            console.log(webFormDataInString);

            $updateSessionSynopsisHandler = jQuery.ajax({
                type: 'PUT',
                url: '/API/SessionSynopsis/' + sessionSynopsisId,
                dataType: 'json',
                contentType: 'application/json;',
                data: "'" + webFormDataInString + "'"
            })
            $updateSessionSynopsisHandler.done(function (data, textStatus, jqXHR) {
                if (data.status == "success") {
                    new Noty({
                        text: data.message, type: 'success',
                        dismissQueue: true,
                        layout: 'center'
                    }).show();
                } else {
                    new Noty({
                        text: data.message, type: 'error',
                        dismissQueue: true,
                        layout: 'center'
                    }).show();
                }
            });
            $updateSessionSynopsisHandler.fail(function (data, textStatus, jqXHR) {
                console.log('executed when runtime error on server side occurred');
                new Noty({
                    text: data.responseJSON.message,
                    type: 'error',
                    dismissQueue: true,
                    layout: 'center'
                }).show();
            });

        }

        

    });//end on on click function

    $('#deleteButton').on('click', function () {
        $deleteSessionSynopsisHandler = jQuery.ajax({
            type: 'Delete',
            url: '/API/SessionSynopsis/' + sessionSynopsisId,
        })
        $deleteSessionSynopsisHandler.done(function (data, textStatus, jqXHR) {
            if (data.status == "success") {
                new Noty({
                    text: data.message, type: 'success',
                    dismissQueue: true,
                    layout: 'center'
                }).show();
            } else {
                new Noty({
                    text: data.message, type: 'error',
                    template: '<div class="noty_message"><span class="noty_text"></span>',
                    layout: 'center'
                }).show();
            }
        });
        $deleteSessionSynopsisHandler.fail(function (data, textStatus, jqXHR) {
            console.log('executed when runtime error on server side occurred');
            console.log(data.responseJSON.message);
            console.log(data);
            new Noty({
                text: data.responseJSON.message,
                type: 'error',
                template: '<div class="noty_message"><span class="noty_text"></span>',
                layout: 'center'
            }).show();
        });
    });//end of on click function

</script>




